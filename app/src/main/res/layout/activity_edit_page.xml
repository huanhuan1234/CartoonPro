<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaowai.cartoonpro.activity.EditPageActivity">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_close_pressed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:id="@+id/editReturn" />

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="编辑资料"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editReturn"
        android:id="@+id/editTextInfo" />

    <TextView
        android:textSize="20sp"
        android:textColor="@color/colorYellow"
        android:text="完成"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/editReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/editFinish" />

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_personal_headportrait"
        android:layout_marginTop="79dp"
        android:id="@+id/imageEdit"
        android:layout_below="@+id/editTextInfo"
        android:layout_alignEnd="@+id/editTextInfo" />

    <LinearLayout
        android:layout_below="@+id/imageEdit"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="80dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editPageNickname" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                />
        </RelativeLayout>

        <View
            android:background="@color/coloMeline"
            android:layout_width="match_parent"
            android:layout_height="12dp"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="80dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editPageSex" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                />
        </RelativeLayout>

        <View
            android:background="@color/coloMeline"
            android:layout_width="match_parent"
            android:layout_height="12dp"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="80dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editPageBirthday" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                />
        </RelativeLayout>

        <View
            android:background="@color/coloMeline"
            android:layout_width="match_parent"
            android:layout_height="12dp"></View>
    </LinearLayout>


</RelativeLayout>
