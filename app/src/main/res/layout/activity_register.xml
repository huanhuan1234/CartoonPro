<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    tools:context="com.example.xiaowai.cartoonpro.activity.RegisterActivity">

    <Button
        android:layout_margin="10dp"
        android:background="@drawable/hot_follow_return_selector"
        android:id="@+id/register_return"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_width="200dp"
        android:layout_height="90dp"
        app:srcCompat="@mipmap/ic_common_placeholder_s"
        android:layout_marginTop="150dp"
         />

    <EditText
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="支持中国大陆"
        android:ems="10"
        android:drawableStart="@drawable/ic_login_phone_selector"
        android:id="@+id/registerphone"
        android:layout_marginTop="248dp" />

    <View
        android:layout_centerHorizontal="true"
        android:id="@+id/registeriview"
        android:layout_below="@id/registerphone"
        android:layout_width="200dp"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        ></View>

    <EditText
        android:layout_below="@id/registerphone"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="8-30位数字或英文"
        android:ems="10"
        android:drawableStart="@drawable/ic_login_pwd_selector"
        android:id="@+id/registerpwd"
         />

    <Button
        android:textColor="@color/colorWhite"
        android:text="注册"
        android:background="@color/coloLogin"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnregister"
        android:layout_below="@id/registerpwd"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp" />


</RelativeLayout>
