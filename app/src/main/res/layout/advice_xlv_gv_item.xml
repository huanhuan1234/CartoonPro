<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/advice_gv_item_image"/>

    <TextView
    android:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/advice_gv_item_image"
    android:layout_alignStart="@+id/advice_gv_item_image"
    android:layout_marginTop="5dp"
    android:id="@+id/advice_gv_item_tv1"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advice_gv_item_tv1"
        android:layout_alignStart="@+id/advice_gv_item_image"
        android:layout_marginTop="5dp"
        android:id="@+id/advice_gv_item_tv2"/>
</RelativeLayout>
