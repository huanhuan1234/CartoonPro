<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txsex"
        android:textSize="20sp"
        android:text="性别"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
         />

    <RadioGroup
        android:id="@+id/rg_sexdialog"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txsex"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/rg_sexbtnboy"
            android:checked="true"
            android:button="@null"
            android:padding="10dp"
            android:textSize="20sp"
            android:drawableRight="@drawable/sex_selector"
            android:drawablePadding="40dp"
            android:text="男"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/rg_sexbtngirl"
            android:drawableRight="@drawable/abc_btn_radio_to_on_mtrl_000"
            android:button="@null"
            android:padding="10dp"
            android:textSize="20sp"
            android:drawablePadding="40dp"
            android:text="女"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

</RelativeLayout>
