<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rela_comic_hot_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:background="@drawable/text_bachground_shape"
            android:text="TextView"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:id="@+id/textView" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView2" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/textView3" />

        <Button
            android:background="@drawable/arrow_selector"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/button"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <ImageView
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@id/rela_comic_hot_item"
        android:id="@+id/imageView" />

    <TextView
        android:layout_margin="10dp"
        android:layout_marginLeft="5dp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:id="@+id/textView4" />

    <Button
        android:background="@drawable/ic_common_praise_highlighted_like_normal"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="300dp"
        android:layout_alignBottom="@+id/textView4"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@id/button2"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:id="@+id/textView6" />

    <Button
        android:background="@drawable/ic_common_detail_normal"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/button3"
        android:layout_alignBottom="@id/button2"
        android:layout_toLeftOf="@id/textView6"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp"
        />



</RelativeLayout>
