<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/discover_advice_vp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/discover_advice_vp"
        android:id="@+id/discover_linear"
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </LinearLayout>
    <xlistview.bawei.com.xlistviewlibrary.XListView
        android:id="@+id/discover_xlv"
        android:layout_below="@id/discover_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </xlistview.bawei.com.xlistviewlibrary.XListView>
</RelativeLayout>
