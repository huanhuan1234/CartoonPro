<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/me_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/me_scrollview_rela"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/me_scrollview_rela_tx"
                android:background="@color/colorYellow"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/me_tx"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_personal_headportrait"
                    />
                <TextView
                    android:id="@+id/me_nickname"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/me_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/me_scrollview_rela_tx"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_me_item_message"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的消息"
                        />
                    <Button
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/ic_listitem_next"
                        />
                </LinearLayout>
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_me_item_follow"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的关注"
                            />
                        <Button
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/ic_listitem_next"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorGray"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_me_item_collection"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏"
                            />
                        <Button
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/ic_listitem_next"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_me_item_follow"/>
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快看游戏"
                        />
                    <Button
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/ic_listitem_next"
                        />
                </LinearLayout>
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_me_item_mall"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快看商城"
                            />
                        <Button
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/ic_listitem_next"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorGray"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_me_item_order"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的订单"
                            />
                        <Button
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/ic_listitem_next"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_me_item_mall"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浏览历史"
                            />
                        <Button
                            android:layout_marginLeft="240dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/ic_listitem_next"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorGray"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_me_item_download_comic"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="智能缓存"
                                />
                            <TextView
                                android:textColor="@color/colorGray"
                                android:layout_margin="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="首页查看今日漫画将不会消耗流量哦"
                                />
                        </LinearLayout>

                        <Button
                            android:layout_marginLeft="75dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@mipmap/ic_listitem_next"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_me_item_setup"/>
                    <TextView
                        android:id="@+id/setting_text"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        />
                    <Button
                        android:layout_marginLeft="265dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/ic_listitem_next"
                        />
                </LinearLayout>
                <View
                    android:background="@color/coloMeline"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"></View>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
